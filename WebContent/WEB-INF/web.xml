<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  
<!-- Servlet Declaration -->
  <servlet>
  	<servlet-name>UploadServlet</servlet-name>
  	<servlet-class>servlets.UploadServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmailServlet</servlet-name>
  	<servlet-class>servlets.EmailServlet</servlet-class>
  </servlet>
  
<!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/site/UploadServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>EmailServlet</servlet-name>
    <url-pattern>/site/EmailServlet</url-pattern>
  </servlet-mapping>

<!-- Upload File configuration -->
  <context-param> 
    <description>Location to store uploaded file</description> 
    <param-name>file-upload</param-name> 
    <param-value>
         C:\Users\Giovanni\Documents\apache-tomcat-8.0.18\webapps\data\
     </param-value> 
	</context-param>
</web-app>